<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="Sample Category"
            id="LittleMyLyn.commands.category">
      </category>
      <command
            name="Welcome"
            categoryId="LittleMyLyn.commands.category"
            id="LittleMyLyn.commands.welcomeCommand">
      </command>
   </extension>
   
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="LittleMyLyn.commands.welcomeCommand"
            class="com.littlemylyn.handlers.WelcomeHandler">
      </handler>
   </extension>
   
   
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="LittleMyLyn.commands.welcomeCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+7"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   
   
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="Little Mylyn"
               mnemonic="M"
               id="LittleMyLyn.menus.sampleMenu">
            <command
                  commandId="LittleMyLyn.commands.welcomeCommand"
                  mnemonic="S"
                  id="LittleMyLyn.menus.welcomeCommand">
            </command>
            <command
                  commandId="LittleMyLyn.commands.welcomeCommand"
                  mnemonic="S"
                  id="LittleMyLyn.menus.welcomeCommand2">
            </command>
         </menu>
      </menuContribution>
      
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="LittleMyLyn.toolbars.sampleToolbar">
            <command
                  commandId="LittleMyLyn.commands.welcomeCommand"
                  icon="icons/sample.gif"
                  tooltip="welcome"
                  id="LittleMyLyn.toolbars.welcomeCommand">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
